<div class="filter-container">
      {{#if searchMode}}
      {{else}}
          <div class="category-list">
            <h2 class="text-success">Filtrar</h2>
              <div class="form-check">
                <input class="form-check-input category-item" type="checkbox" category="Profesor" id="flexCheckDefault" />
                <label class="form-check-label" for="flexCheckDefault">Profesor</label>
              </div>
              <div class="form-check">
                <input class="form-check-input category-item" type="checkbox" category="Estudiante" id="flexCheckDefault" />
                <label class="form-check-label" for="flexCheckDefault">Estudiante</label>
              </div>
          </div>
      {{/if}}
</div>
<h1 class="text-center">Cursos</h1>
<div class="container-fluid">
                <div class="row">
                    <div class="col-12 mt-3">

      {{#if hasCursos}}

        {{#each cursos as |curso|}}

              <div class="card book-item" category="{{curso.type}}">
                  <div class="card-horizontal">
                      <div class="img-square-wrapper">
                          <img class="img" src="{{curso.image}}" alt="{{curso.name}}">
                      </div>
                      <div class="card-body">
                          <h3 class="card-title">{{curso.name}}</h3>
                          <p class="card-text">{{curso.description}}</p>
                          <div class="d-flex">
                            <a class="btn btn-primary" href="{{curso.link}}">Ver m√°s</a>
                          </div>
                      </div>
                  </div>
              </div>
      {{/each}}
        </div>
        </div>
        </div>
      {{else}}
      <h1>No hay herramientas en la base de datos</h1>
      {{/if}}

    </div>
  </div>
</div>