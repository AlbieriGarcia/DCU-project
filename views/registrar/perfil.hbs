{{#each usuario as |usuario|}}
    <div class="row d-flex justify-content-center align-items-center">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <img src="{{usuario.image}}"
                alt="Avatar" class="img-fluid my-5" style="width: 200px;" />
              <h5 style="font-size: 40px;">{{usuario.name}}</h5>
              <p style="font-size: 30px;">{{usuario.type}}</p>
              <i class="far fa-edit mb-5"></i>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6 style="font-size: 30px;">Informaci√≥n</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6 style="font-size: 20px;">Email</h6>
                    <p class="text-muted" style="font-size: 20px;">{{usuario.email}}</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6 style="font-size: 20px;">Telefono</h6>
                    <p class="text-muted" style="font-size: 20px;">{{usuario.telefono}}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
{{/each}}